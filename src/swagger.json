{
	"openapi": "3.0.0",
	"info": {
		"title": "Rentalx Documentation",
		"description": "This is an Rental API",
		"version": "1.0.0",
		"contact": "jpmmatias@gmail.com"
	},
	"paths": {
		"/categories": {
			"post": {
				"tags": ["Category"],
				"summary": "Create Category",
				"description": "Create a new category",
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"propreties": {
									"name": {
										"type": "string"
									},
									"description": {
										"type": "string"
									}
								},
								"example": {
									"name": "The best category",
									"description": "The best description"
								}
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "Created"
					},
					"500": {
						"description": "Category already exists"
					},
					"400": {
						"description": "Bad Request: 'name' field is required"
					}
				}
			},
			"get": {
				"tags": ["Category"],
				"summary": "List Categories",
				"description": "List all the categories",
				"responses": {
					"200": {
						"description": "Successufuly fetched all te categories",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": {
										"type": "object",
										"properties": {
											"id": {
												"type": "string"
											},
											"name": {
												"type": "string"
											},
											"description": {
												"type": "string"
											},
											"created_at": { "type": "string" }
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
