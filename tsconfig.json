{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,

		"target": "es2016",
		"lib": ["es5", "es6", "dom"],
		"module": "commonjs",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"paths": {
			"@modules/*": ["modules/*"],
			"@config/*": ["config/*"],
			"@shared/*": ["shared/*"],
			"@errors/*": ["errors/*"]
		},
		"resolveJsonModule": true,

		"outDir": "./build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		"strict": true,
		"skipLibCheck": true
	}
}
